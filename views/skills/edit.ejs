<%- include('../partials/header') %>

<form class="p-3" action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
    <input type="text" name="skill" value="<%= skill.skill %>"><br>
    <label>
        <input class="text-success p-3" type="checkbox" name="done" <%= skill.done ? 'checked' : '' %>>
        Added
    </label><br>
    
    <button class="text-success" type="submit">Save Skill</button>
</form>


